{
    "model": {
        "name": "MLP",
        "architecture": {
            "input_shape": [784],
            "output_shape": 10,
            "layers": [
                {
                    "type": "linear",
                    "in_features": 784,
                    "out_features": 512,
                    "bias": true,
                    "activation": "relu"
                },
                {
                    "type": "linear",
                    "in_features": 512,
                    "out_features": 512,
                    "bias": true,
                    "activation": "relu"
                },
                {
                    "type": "linear",
                    "in_features": 512,
                    "out_features": 10,
                    "bias": true,
                    "activation": "softmax"
                }
            ]
        }
    },
    "training": {
        "optimizer": {
            "type": "adam",
            "learning_rate": 0.001,
            "weight_decay": 0.0001
        },
        "batch_size": 64,
        "epochs": 10,
        "loss_function": "cross_entropy",
        "metrics": [
            "accuracy",
            "f1_score"
        ]
    }
}